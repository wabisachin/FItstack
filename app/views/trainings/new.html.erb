<main id="training-new">
    <section class="container">
        <%=  form_for [@user, @training] do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <div class="title">
                <%= f.label :name, "トレーニング名" %>
                <%= f.text_field :name, placeholder:"トレーニング名" %>
            </div>
            <div class="category">
                <%= f.label :category_id, "部位名" %>
                <%= f.text_field :category_id, placeholder:"部位を選択" %>
            </div>
            <div class="weight">
                <%= f.label :weight, "重量" %>
                <%= f.text_field :weight, type:"number", placeholder:"半角数字のみ" %>
            </div>
            <div class="times">
                <%= f.label :times, "回数" %>
                <%= f.text_field :times, type:"number", placeholder:"半角数字のみ" %>
            </div>
            <div class="submit">
                <%= f.submit "確定" %>
            </div>
        <% end %>
    </section>
</main>