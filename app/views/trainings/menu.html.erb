<main id="training-show">
    <!--筋トレの種類-->
    <section class= "item container">
        <div class="title">
            <p class="text-center">トレーニング種目一覧</p>
        </div>
        
        <!--コンテンツをgridレイアウトで並べる,div括りだとrenderが繰り返されるたびに階層を上がってしまうのでsectionで括る-->
        <section class="contents row">
            <%= render partial: "training", collection: @trainings %>
        </section>
        
        <div class="add-item">
            <%= link_to "＋トレーニング種目の追加", new_user_training_path(@user) %>
        </div>
    </section>
    <!--トレーニングコースの種類-->
    <section class="course container">
        <div class="title">
            <p class="text-center">トレーニングメニュー一覧</p>
        </div>
        <div class="add-course">
            <%= link_to "＋トレーニングメニューの追加","" %>
        </div>
    </section>
</main>